<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width,initial-scale=1" name="viewport" />
    <link href="/css/index.css" media="all" rel="stylesheet" type="text/css" />
    <script src="/js/index.js" type="module"></script>
    <title>Facecards</title>
  </head>
  <body>
    {% for period, class in classes %}
      <h1>{{class.name}}</h1>
    <p>
      <a href="/learn/p/{{period}}">Learn</a> |
      <a href="/review/p/{{period}}">Review</a>
    </p>
    <div class="faces">
      {% for student in class.students | sort(attribute='firstName') %}
        <div class="card">
          <img src="/images/{{student.studentNumber}}.jpg"></img>
          <div class="back">
            <p class="name">{% if student.nickname %}{{student.nickname}}{% else %}{{student.firstName}}{% endif %}</p>
            <p>{{student.firstName}} {{student.lastName}}</p>
            <p>{{student.grade}} / {{student.gender}}</p>
            <p>{{student.course}} - Period {{student.period}}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endfor %}
  </body>
</html>
